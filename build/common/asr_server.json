{
  "server": {
    "port": 9000,
    "host": "0.0.0.0",
    "read_timeout": 300,
    "websocket": {
      "read_timeout": 300,
      "max_message_size": 2097152,
      "read_buffer_size": 1024,
      "write_buffer_size": 1024,
      "enable_compression": true
    }
  },
  "session": {
    "send_queue_size": 500,
    "max_send_errors": 10
  },
  "vad": {
    "provider": "ten_vad",
    "pool_size": 20,
    "threshold": 0.3,
    "silero_vad":{
      "model_path": "models/vad/silero_vad/silero_vad.onnx",
      "min_silence_duration": 0.1,
      "min_speech_duration": 0.25,
      "max_speech_duration": 8.0,
      "window_size": 512,
      "buffer_size_seconds": 10.0
    },
    "ten_vad":{
        "hop_size": 512,
        "min_speech_frames": 12,
        "max_silence_frames": 5
      }
  },
  "recognition": {
    "enabled": false,
    "model_path": "models/asr/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/model.int8.onnx",
    "tokens_path": "models/asr/sherpa-onnx-sense-voice-zh-en-ja-ko-yue-2024-07-17/tokens.txt",
    "language": "auto",
    "use_inverse_text_normalization": false,
    "num_threads": 16,
    "provider": "cpu",
    "debug": false
  },
  "speaker": {
    "enabled": true,
    "model_path": "models/speaker/3dspeaker_speech_campplus_sv_zh_en_16k-common_advanced.onnx",
    "num_threads": 8,
    "provider": "cpu",
    "threshold": 0.6,
    "data_dir": "data/speaker",
    "save_audio_on_finish": false,
    "audio_save_dir": "",
    "storage_type": "json",
    "json_storage": {
      "file_path": "data/speaker/speaker_embeddings.json"
    },
    "qdrant": {
      "host": "192.168.208.214",
      "port": 6334,
      "collection_name": "speaker_embeddings"
    }
  },
  "audio": {
    "sample_rate": 16000,
    "feature_dim": 80,
    "normalize_factor": 32768.0,
    "chunk_size": 4096
  },
  "pool": {
    "instance_mode": "single",
    "worker_count": 500,
    "queue_size": 10000
  },
  "rate_limit": {
    "enabled": false,
    "requests_per_second": 1000,
    "burst_size": 2000,
    "max_connections": 2000
  },
  "response": {
    "send_mode": "queue",
    "timeout": 6
  },
  "logging": {
    "level": "debug",
    "format": "text",
    "output": "both",
    "file_path": "logs/app.log",
    "max_size": 100,
    "max_backups": 5,
    "max_age": 30,
    "compress": true
  }
} 
